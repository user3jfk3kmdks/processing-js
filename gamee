        if (page === 'home' && mouseX > s[0] && mouseX <  s[0] +          s[2] && mouseY > s[1] && mouseY < s[1] + s[3] ) {
        gamePage();
    
    
    
        } else if (page === 'home' && mouseX > q[0] && mouseX <           q[0] + q[2] && mouseY > q[1] && mouseY < q[1] + q[3]) {
