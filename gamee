//This is the Game page
var gamePage = function()  {
    z = 60;
    draw = function() {
    z = z - 0.01;
    fill(233, 237, 125);
    rect(1,1,80,20); 
    stroke(233, 237, 125);
    rect(1,578,280,20);
    
    fill(0, 0, 0);
    textSize(20);
    text("Score:"+x,10,20);
    
    fill(0, 0, 0);
    textSize(20);
    text("time:"+z,10,593);
    
    if (z <= 0) {
    textSize(45);
    text("You Had a Score of "+z,100,100);
    background(255, 0, 0);
    
    } else if (mouseX > y[0] && mouseX < y[0]+50 && mouseY > y[1] && mouseY < y[1]+50) {
    x=(1);
    
    }   
  
    
    
    };
    


   
    page = "game";
    background(233, 237, 125);
        
    fill(21,255,0);
    y = [y,m];
    ellipse(y[0], y[1], 50,50);
    if (second()>= 60) {
    background(255, 0, 0);
    }
    
mousePressed = function()  {
    if (mouseX > y[0] && mouseX < y[0]+50 && mouseY > y[1] &&      mouseY < y[1]+50) { 
    background(233, 237, 125);
    fill(21,255,0);
    l = [l,w];
    stroke(0,0,0);
    ellipse(l[0], l[1], 50,50);
    stroke(0,0,0);
    
    } else if (mouseX > l[0]+50 && mouseX < l[0] && mouseY >       l[1] && mouseY < l[1]+50) {
    background(233, 237, 125);
    fill(21,255,0);
    stroke(0,0,0);
    y = [y,m];
    ellipse(y[0], y[1], 50,50);
    stroke(0,0,0);    
        
    }
    };

    }; 
//This is the moving circle
    var circle = function() { 
        draw = function() {
        if ( page === 'home' ) {
        fill(100,200,443);  
        stroke(100,200,443);
        rect(-10,250,700, 60);
        stroke(0,0,0);
        fill(21, 255, 0);
        ellipse(a,280,50,50);
        a=a+6;
        if (a >= 625)  {
            a=a-650;    
        }
    }
};
};
homePage();
circle();


};
game();
